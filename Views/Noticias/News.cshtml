@model IEnumerable<Noticias>

@{
    ViewData["Title"] = "Dashboard - Notícias";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Lista de Notícias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Noticias" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Criar nova Notícia
            </a>
        </div>
    </div>
    <br /> <br />
    <table class="table table-striped table-bordered table-hover text-center">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Notícias
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Publicada em
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td>
                    @obj.Id
                </td>
                <td>
                    <a class="nav-link" asp-controller="" asp-action="">@obj.Titulo</a>
                </td>
                <td>
                    @obj.Categoria
                </td>
                <td>
                    @obj.CriadoEm
                </td>
                <td>
                    <div class="w-75 btn btn-group" role="group">
                        <a asp-controller="Noticias" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-1"><i class="bi bi-pencil-square"></i> Editar</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn btn-group" role="group">
                        <a asp-controller="Noticias" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-1"><i class="bi bi-trash"></i> Excluir</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>