@{
    ViewData["Title"] = "Fale Conosco";
}
<h1 class="mt-3">@ViewData["Title"]</h1>

<p>Envie uma mensagem direta para nós!</p>

<form class="form-control">
    <div class="form-group m-4">
        <label>Nome *</label>
        <input class="form-control mt-2" type="text" required placeholder="Nome completo"/>
    </div>
    <div class="form-group m-4">
        <label>Email *</label> <br />
        <input class="form-control mt-2" type="email" required placeholder="example@example.com"/>
    </div>
    <div class="form-group m-4">
        <label>Assunto</label>
        <input class="form-control mt-2" type="text" placeholder="Assunto"/>
    </div>
    <div class="form-group m-4">
        <label>Mensagem *</label>
        <textarea class="form-control mt-2" cols="40" rows="10" style="margin: 0px; width: 1052px; height: 250px; resize: none;" required placeholder="Digite sua mensagem aqui!"></textarea>
    </div>
        <input class="btn btn-success d-block px-5 py-3 mt-2 m-auto" type="submit"/>
    
</form>
