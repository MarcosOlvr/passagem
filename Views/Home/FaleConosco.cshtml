@model FaleConosco

@{
    ViewData["Title"] = "Fale Conosco";
}

<div class="p-3">
    <h1 class="mt-3">@ViewData["Title"]</h1>

    <p>Nos envie uma mensagem direta!</p>

    <form method="post" class="form-control mb-3">
        <div class="form-group m-4">
            <label><strong>Nome</strong></label>
            <input class="form-control mt-2" asp-for="NomeAutor" placeholder="Nome completo"/>
            <span asp-validation-for="NomeAutor" class="text-danger"></span>
        </div>
        <div class="form-group m-4">
            <label><strong>Email</strong></label>
            <input class="form-control mt-2" asp-for="Email" placeholder="example@example.com"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group m-4">
            <label><strong>Assunto</strong></label>
            <input class="form-control mt-2" asp-for="Assunto" placeholder="Assunto"/>
            <span asp-validation-for="Assunto" class="text-danger"></span>
        </div>
        <div class="form-group m-4">
            <label><strong>Mensagem</strong></label>
            <textarea class="form-control mt-2" asp-for="Mensagem" cols="40" rows="10" style="resize: none;" placeholder="Digite sua mensagem aqui!"></textarea>
            <span asp-validation-for="Mensagem" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-success d-block px-5 py-3 mt-2 m-auto" type="submit"/>
        </div>
    </form>
</div>
