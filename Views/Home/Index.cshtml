@model HomeIndexViewModel

@{
    ViewData["Title"] = "Prefeitura Municipal de Passagem - RN";
}

<div class="container m-3">
    <div class="col-lg-4 p-0">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var obj in Model.ListaNoticias.TakeLast(3).Reverse())
            {
                if (obj.NoticiaId == Model.UltimaNoticia.NoticiaId)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100 h-100" src="~/images/caze.jpg" alt="@obj.ResumoMateria">
                        <div class="carousel-caption d-none d-md-block bg-black bg-opacity-50">
                            <h5>@obj.Titulo</h5>
                            <p>@obj.ResumoMateria</p>
                            <p>@obj.CriadoEm</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/caze.jpg" alt="@obj.ResumoMateria">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@obj.Titulo</h5>
                            <p>@obj.ResumoMateria</p>
                            <p>@obj.CriadoEm</p>
                        </div>
                    </div>
                }
                
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>
    </div>
</div>