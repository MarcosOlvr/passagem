@model UserViewModel

@{
    ViewData["Title"] = "Criar Usuário";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid col-6 mt-4">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Criar usuário</h1>
    </div>
    <form method="post" class="user">
        @Html.HiddenFor(model => model.ListaCargos)
        <div class="form-group">
            <input asp-for="User.Nome" class="form-control form-control-user" placeholder="Primeiro e segundo nome" />
        </div>
        <div class="form-group">
            <input asp-for="User.NomeUsuario" class="form-control form-control-user" placeholder="Nome de usuário" />
        </div>
        <div class="form-group">
            <input type="password" asp-for="User.Senha" class="form-control form-control-user" placeholder="Senha" />
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="User.CargoFK">
                <option disabled selected value="">Selecione uma opção</option>
                @foreach (var obj in Model.ListaCargos)
                {
                    @if (obj.CargoNome == "Admin")
                    {       
                    }
                    else
                    {
                        <option value="@obj.CargoId">@obj.CargoNome</option>    
                    }
                }
            </select>
        </div>
        <div class="d-flex justify-content-center m-2">
            <button type="button" class="btn btn-primary btn-user" style="width:150px" data-toggle="modal" data-target="#ExemploModalCentralizado">Criar</button>
        </div>
        <div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="TituloModalCentralizado">Confirmação</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Deseja criar o novo usuário?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-primary">Criar</button>
                        </div>
                    </div>
                </div>
            </div>
    </form>
</div>

