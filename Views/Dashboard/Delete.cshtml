@model Noticias

@{
    ViewData["Title"] = "Excluir Notícia";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="container-fluid">
    <form method="post">
        <div class="mb-4">
            <div class="row pb-2 pl-2">
                <h1 class="h3 mb-2 text-gray-800">Excluir Notícia</h1>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Titulo">Título</label>
                <input asp-for="Titulo" disabled class="form-control"/>
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="mb-3">
                <label asp-for="ResumoMateria">Resumo da Matéria</label>
                <input asp-for="ResumoMateria" disabled class="form-control"/>
            </div>
            <div class="mb-3">
                <label asp-for="Conteudo">Conteúdo</label>
                <textarea asp-for="Conteudo" disabled class="form-control" cols="40" rows="10" style="resize: none;"></textarea>
                @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
            </div>
            <button type="button" class="btn btn-danger" style="width:150px" data-toggle="modal" data-target="#ExemploModalCentralizado">Excluir</button>
            <a asp-controller="Dashboard" asp-action="News" class="btn btn-secondary" style="width:150px">
                Voltar para lista
            </a>
            <div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog" aria-labelledby="TituloModalCentralizado" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="TituloModalCentralizado">Confirmação</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Deseja deletar (para sempre) esta notícia?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>