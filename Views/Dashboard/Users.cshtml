@model UserListViewModel

@{
    ViewData["Title"] = "Usuários";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Usuários</h1>
    <p class="mb-4">Este local serve para gerenciar todos os Usuários que estão registrados no nosso sistema, podemos editar ou excluir alguma conta por aqui!</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-6">
                    <h6 class="m-0 font-weight-bold text-primary">Tabela de Usuários</h6>
                </div>
            </div> 
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>Cargo</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.ListaUser)
                        {
                            <tr>
                                <td>@obj.UserId</td>
                                <td>@obj.Nome</td>
                                @foreach (var categoria in Model.ListaCargo)
                                {
                                    if (categoria.CargoId == obj.CargoFK)
                                    {
                                        <td>@categoria.CargoNome</td>
                                    }
                                }
                                @if (@obj.Cargo.CargoNome == "Admin")
                                {
                                    <td></td>
                                    <td></td>
                                }
                                else
                                {
                                    <td class="text-center">
                                        <a asp-controller="Dashboard" asp-action="EditUser" asp-route-id="@obj.UserId" class="btn btn-primary">
                                            <i class="bi bi-pencil-square"></i> Editar
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Dashboard" asp-action="DeleteUser" asp-route-id="@obj.UserId" class="btn btn-danger">
                                            <i class="bi bi-trash"></i> Excluir
                                        </a>
                                    </td> 
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

