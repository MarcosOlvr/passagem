@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar Usuário";
}

<div class="container-fluid col-6 text-center mt-3">

    <h1 class="h3 mb-2 text-gray-800">Criar um novo Usuário</h1>

            <form class="user" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <p class="mb-4">Local reservado para a criação de novos usuários.</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-floating">
                    <input asp-for="Input.Email" class="form-control form-control-user" autocomplete="username" aria-required="true" placeholder="Endereço de Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group form-floating">
                    <input asp-for="Input.Password" class="form-control form-control-user" autocomplete="new-password" aria-required="true" placeholder="Senha" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-user" autocomplete="new-password" aria-required="true" placeholder="Confirmar Senha"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-user">Registrar</button>
            </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
